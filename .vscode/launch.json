    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Custom Lua Environment",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "${env:LOVE_BIN}/love.exe"
            },
            "args": [
                "${workspaceFolder}"
            ]
        },
        {
            "name": "Debug Lua Interpreter",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "lua": "${workspaceFolder}/luarocks/bin/lua.exe",
                "file": "launch.lua"
            }
        },
    ]
}